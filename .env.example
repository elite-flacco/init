# AI Configuration
# Set the AI provider: 'openai', 'anthropic', or 'mock'
AI_PROVIDER=mock

# OpenAI Configuration (uncomment and add your key to use OpenAI)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Configuration (uncomment and add your key to use Anthropic)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# AI Model Configuration
AI_MODEL=gpt-4
AI_MAX_TOKENS=8000
AI_TEMPERATURE=0.7

# AI Base URL (optional, for custom OpenAI-compatible endpoints)
# AI_BASE_URL=https://your-custom-endpoint.com

# AI Chunking Configuration
AI_ENABLE_CHUNKING=true
AI_CHUNK_TOKEN_LIMIT=4000
AI_MAX_CHUNKS=4

# Supabase Configuration
# Get these from your Supabase project settings -> API
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Service Role Key (server-side only, full database access)
# Used for admin operations like cleanup and bypassing RLS
# ⚠️  NEVER expose this key in frontend code!
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Example values (replace with your actual Supabase credentials):
# NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Security Configuration
# Comma-separated list of allowed origins for CSRF protection
# In development, localhost origins are automatically allowed
SECURITY_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Pixabay API Configuration
# Get this from https://pixabay.com/api/docs/
# Used for dynamic destination images (optional - falls back to static images)
PIXABY_API_KEY=your_pixabay_api_key

# Google Analytics Configuration
# Get this from your Google Analytics 4 property
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga4_measurement_id
